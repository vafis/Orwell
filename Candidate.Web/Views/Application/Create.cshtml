
@model Candidates.Web.Models.PersonViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            <fieldset>
                @Html.ValidationSummary(false)
                <div>
                    @Html.LabelFor(model => model.Name, "Name:*")
                    <div>
                        @Html.TextBoxFor(model => model.Name)
                    </div>
                </div>
                <div>
                    @Html.LabelFor(x => x.Surname, "Surname:*")
                    <div>
                        @Html.TextBoxFor(x => x.Surname)
                    </div>
                </div>
                <div>
                    <div class="editor-label">
                        @Html.LabelFor(x => x.SelectedSkills)
                    </div>
                    <div>
                        @for (int i = 0; i < Model.SelectedSkills.Count; i++)
                        {
                            <div>
                                @Html.HiddenFor(x => x.SelectedSkills[i].Id)
                                @Html.HiddenFor(x => x.SelectedSkills[i].Name)
                                @Html.EditorFor(x => x.SelectedSkills[i].IsChecked)
                                @Html.DisplayFor(x => x.SelectedSkills[i].Name)
                                
                            </div>
                        }
                    </div>
                </div>
                <div >
                    <button >
                        Save Application
                    </button>
                </div>
   
            </fieldset>

        }
    </div>
</body>
</html>
